<header>
    <h2>Books</h2>
</header>
<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<% @books.each do |book| %>
<tr> 
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>  
<% end %>
</table>

<!-- エラーメッセージを表示させる記述 -->
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |book| %>
        <li><%= book %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>