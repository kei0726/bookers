<h1>Books</h1>
<!--テーブル開始-->
<table>
<thead>
    <tr>
        <th>title</th>
        <th>body</th>
    </tr>
</thead>

<tbody>
<% @posts.each do |post| %>
    <tr>
        <td>
            <%= post.title %>
        </td>
        <td>
            <%= post.body %>
        </td>
        <td>
            <%= link_to "edit",edit_post_path(post.id)%>
            <%= link_to "show",post_path(post.id)%>
        </td>
    </tr>
<% end %>
</tbody>
</table>

<h1>New books</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>


 
    <%= f.submit 'Create Book' %>
 
<% end %>